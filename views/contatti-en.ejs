  <form class="webform-client-form webform-client-form-15" id="contact-form">

    <!-- Inizio personalizzazione FP-->
      
      <section style="height: 40px;">
       &nbsp;
      </section>

      <div class="container">

        <div class="row">
          <div class="col-md-6">

            <h2 class="mb-sm mt-sm"><strong>Contact Us</strong></h2>

            <div class="contact-form-success alert alert-success d-none mt-4" id="areaMessaggiGreen">
              <strong>Sent</strong> Your message has been sent, we will get back to you as soon as possible.
           </div>
        
            <div class="contact-form-error alert alert-danger d-none mt-4" id="areaMessaggiRed">
                <strong>Error!</strong>The message could not be sent.
                <span class="mail-error-message text-1 d-block"></span>
            </div>

            <div  class="form-item webform-component webform-component-textfield webform-component--azienda">
              <label for="edit-submitted-azienda">Company</label>
              <input class="form-control" type="text" id="azienda" name="azienda" value="" size="30" maxlength="128" />
            </div>
            <div class="form-item webform-component webform-component-textfield webform-component--nome-e-cognome">
              <label class="required" for="edit-submitted-nome-e-cognome">Name and Surname</label>
              <input required="required" class="form-control" type="text" id="nome" name="nome" value="" size="30" maxlength="128" required />
            </div>
            <div  class="form-item webform-component webform-component-email webform-component--e-mail">
              <label class="required" for="edit-submitted-e-mail">E-Mail</label>
              <input required="required" class="email form-control form-text form-email required" type="email" id="email" name="email" size="60" />
            </div>
            <div class="form-item webform-component webform-component-textfield webform-component--telefono">
              <label class="required" for="edit-submitted-telefono">Phone</label>
              <input required="required" class="form-control" type="text" id="telefono" name="telefono" value="" size="30" maxlength="128" required />
              <input type="hidden" value="<%- lang %>" name="lang" id="lang">
            </div>
            <div  class="form-item webform-component webform-component-textarea webform-component--messaggio">
              <label for="edit-submitted-messaggio">Messagge</label>
              <div class="form-textarea-wrapper resizable"><textarea class="form-control" id="messaggio" name="messaggio" cols="60" rows="5"></textarea>
              </div>
            </div>

